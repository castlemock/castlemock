<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>web-mock-rest</artifactId>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.castlemock.web.mock</groupId>
        <artifactId>web-mock</artifactId>
        <version>${project.version}</version>
        <relativePath>../</relativePath>
    </parent>

    <dependencies>
        <!-- Castle Mock dependencies -->
        <dependency>
            <groupId>com.castlemock.model.mock</groupId>
            <artifactId>model-mock-rest</artifactId>
        </dependency>
        <dependency>
            <groupId>com.castlemock.repository.mock.rest</groupId>
            <artifactId>repository-mock-rest-file</artifactId>
        </dependency>
        <dependency>
            <groupId>com.castlemock.repository.mock.rest</groupId>
            <artifactId>repository-mock-rest-model</artifactId>
        </dependency>
        <dependency>
            <groupId>com.castlemock.service</groupId>
            <artifactId>service-mock-rest</artifactId>
        </dependency>

        <!-- Castle Mock test dependencies -->
        <dependency>
            <groupId>com.castlemock.model.mock</groupId>
            <artifactId>model-mock-rest</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.castlemock.web</groupId>
            <artifactId>web-core</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <!-- Third party dependencies -->
        <dependency>
            <groupId>org.yaml</groupId>
            <artifactId>snakeyaml</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.xml.bind</groupId>
            <artifactId>jakarta.xml.bind-api</artifactId>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>../../../</directory>
                <targetPath>META-INF</targetPath>
                <includes>
                    <include>LICENSE</include>
                    <include>NOTICE</include>
                    <include>AUTHORS</include>
                    <include>LICENSE-3RD-PARTY</include>
                </includes>
            </resource>
            <resource>
                <directory>./src/main/resources/META-INF/resources</directory>
                <targetPath>META-INF/resources</targetPath>
                <includes>
                    <include>**/*.*</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>repository-mock-rest-file</artifactId>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.castlemock.repository.mock.rest</groupId>
        <artifactId>repository-mock-rest</artifactId>
        <version>${project.version}</version>
        <relativePath>../</relativePath>
    </parent>

    <dependencies>
        <!-- Castle Mock dependencies -->
        <dependency>
            <groupId>com.castlemock.core</groupId>
            <artifactId>core-basis</artifactId>
        </dependency>
        <dependency>
            <groupId>com.castlemock.core.mock</groupId>
            <artifactId>core-mock-rest</artifactId>
        </dependency>
        <dependency>
            <groupId>com.castlemock.repository.core</groupId>
            <artifactId>repository-core-model</artifactId>
        </dependency>
        <dependency>
            <groupId>com.castlemock.repository.core</groupId>
            <artifactId>repository-core-file</artifactId>
        </dependency>
        <dependency>
            <groupId>com.castlemock.repository.mock.rest</groupId>
            <artifactId>repository-mock-rest-model</artifactId>
        </dependency>

        <!-- Castle Mock test dependencies -->
        <dependency>
            <groupId>com.castlemock.core.mock</groupId>
            <artifactId>core-mock-rest</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <!-- Third party test dependencies -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>../../../../</directory>
                <targetPath>META-INF</targetPath>
                <includes>
                    <include>LICENSE</include>
                    <include>NOTICE</include>
                    <include>AUTHORS</include>
                    <include>LICENSE-3RD-PARTY</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>